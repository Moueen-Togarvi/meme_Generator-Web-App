{
  "version": 2,
  "builds": [
    {
      "src": "core/api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12"
      }
    },
    {
      "src": "core/staticfiles/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "core/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "core/api/index.py"
    }
  ]
}
